<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.team.TeamFragment">


    <TextView
        android:id="@+id/vacancyScreenTitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:fontFamily="@font/ys_display_medium"
        android:lineHeight="@dimen/text_line_height_26dp"
        android:paddingStart="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_19dp"
        android:paddingEnd="@dimen/margin_8dp"
        android:paddingBottom="@dimen/margin_19dp"
        android:text="@string/team"
        android:textColor="?attr/prime_color_black"
        android:textFontWeight="500"
        android:textSize="@dimen/text_size_22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vacancyScreenTitle">

        <TextView
            android:id="@+id/teamAuthorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_bold"
            android:lineHeight="@dimen/text_line_height_38dp"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_8dp"
            android:paddingEnd="@dimen/margin_16dp"
            android:paddingBottom="@dimen/margin_8dp"
            android:text="@string/team_author_title"
            android:textColor="?attr/prime_color_black"
            android:textFontWeight="700"
            android:textSize="@dimen/text_size_32sp" />

        <TextView
            android:id="@+id/teamMember1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:fontFamily="@font/ys_display_medium"
            android:lineHeight="@dimen/text_line_height_19dp"
            android:text="@string/team_author1"
            android:textColor="?attr/prime_color_black"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/teamMember2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:fontFamily="@font/ys_display_medium"
            android:lineHeight="@dimen/text_line_height_19dp"
            android:text="@string/team_author2"
            android:textColor="?attr/prime_color_black"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/teamMember3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:fontFamily="@font/ys_display_medium"
            android:lineHeight="@dimen/text_line_height_19dp"
            android:text="@string/team_author3"
            android:textColor="?attr/prime_color_black"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/teamMember4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:fontFamily="@font/ys_display_medium"
            android:lineHeight="@dimen/text_line_height_19dp"
            android:text="@string/team_author4"
            android:textColor="?attr/prime_color_black"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
