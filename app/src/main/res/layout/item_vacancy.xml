<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/vacancyLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/vacancy_no_image_holder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vacancyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_22sp"
            android:textFontWeight="500"
            android:fontFamily="@font/ys_display_medium"
            android:lineHeight="@dimen/text_line_height_26dp"
            tools:text="Название вакансии"
            android:textColor="?attr/prime_color_black"/>

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            tools:text="Название компаний"
            android:lineHeight="@dimen/text_line_height_19dp"
            android:textColor="?attr/prime_color_black"/>

        <TextView
            android:id="@+id/financeCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp"
            android:fontFamily="@font/ys_display_regular"
            tools:text="от 00 до 00"
            android:textFontWeight="400"
            android:lineHeight="@dimen/text_line_height_19dp"
            android:textColor="?attr/prime_color_black"/>

    </LinearLayout>


</LinearLayout>
