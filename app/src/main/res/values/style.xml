<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="CustomBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="lineHeight">@dimen/text_line_height_16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SalaryEditText" >
        <item name="android:background">@null</item>
    </style>
    
    <style name="filterButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="background">@drawable/round_corner_blue_shape</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white_day</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="teamMemberStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/prime_color_black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>


</resources>
